{{#each erros}}

    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card mt-4">
    <div class="card-body">
        <h4>Editar Postagem: </h4>
        <form action="/admin/postagem/edit" method="post">
            <input type="hidden" value="{{postagem._id}}"name="id">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control mt-2" value="{{postagem.titulo}}" required>
            <label for="slug" class="mt-4">Slug: </label>
            <input type="text" name="slug" class="form-control mt-2" value="{{postagem.slug}}" required>
            <label for="descricao"class="mt-4">Descricao: </label>
            <input type="text" name="descricao" class="form-control mt-2" value="{{postagem.descricao}}" required>
            <label for="conteudo"class="mt-4">Conteúdo: </label>
            <textarea name="conteudo" class="form-control mt-2" required>{{postagem.conteudo}}</textarea>
            <label for="categoria" class="mt-4">Categoria: </label>
            <select name="categoria" class="custom-select mt-2"style="width:100%">
                {{#each categorias}}    
                <option value="{{_id}}"> {{nome}} </option>
                {{else}}
                <option value="0">Nenhuma Categoria Registrada</option>
                {{/each}}
            </select><br>
            <button class="btn btn-success mt-4" type="submit">Confirmar Edição</button>
        </form>
    </div>
</div>